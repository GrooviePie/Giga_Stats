<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    android:background="#00000000">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#00000000"
        android:layout_below="@+id/buttonStartWorkout"
        android:layout_marginTop="29dp"
        android:text="Mit Start soll das Workout beginnen\n\nHier soll auch alle Infos zur Übung stehen (Set, Vorheriges?, KG, Wiederholungen, Checkbox)\n\nDie Checkbox dient dazu anzuzeigen, dass man einen Satz beendet hat" />

    <TextView
        android:id="@+id/bottomSheetExerciseNameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="[Übungsname]"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <!-- unsichtbarer Beenden Knopf-->
    <TextView
        android:id="@+id/buttonEndWorkout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="Beenden"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/buttonStartWorkout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Starten" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStartWorkout"
        android:gravity="center"
        android:text="00:00" />

</RelativeLayout>

