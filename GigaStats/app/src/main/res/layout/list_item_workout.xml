<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dip">

    <LinearLayout
        android:id="@+id/linearLayoutWorkoutItem"
        style="@style/listItemWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/w"
            style="@style/textPrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/element_divider_left"
            android:gravity="center"
            android:text="HAAAAAAAALLLLLLLLLOOOOOOOOOOOOOO"
            android:textSize="16dip"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>