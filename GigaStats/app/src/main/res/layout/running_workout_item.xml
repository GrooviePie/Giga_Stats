<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dip"
    android:layout_height="150dip"
    tools:ignore="MissingDefaultResource"
    android:layout_row="1"
    android:layout_rowWeight="1"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_margin="12dp"

    app:cardCornerRadius="15dp"
    app:cardElevation="12dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="15dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/runningImageInsert"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@drawable/ic_bottommenu_workouts_24_black"
                tools:ignore="ContentDescription,HardcodedText"></ImageView>

            <TextView
                android:id="@+id/runningNameInsert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/runningWorkoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"></TextView>


        </LinearLayout>


</androidx.cardview.widget.CardView>
